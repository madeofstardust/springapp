<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "Novel" table = "Novel">

        <meta attribute = "class-description">
            This class contains data about Novels.
        </meta>

        <id name = "ID" type = "int" column = "ID">
            <generator class="native"/>
        </id>

        <property name = "Title" column = "Title" type = "string"/>
        <!-- <property name = "Year" column = "Year" type = "Datetime"/> -->
        <property name = "Main_series" column = "Main_series" type = "string"/>
        <property name = "Side_series" column = "Side_series" type = "string"/>
        <property name = "Main_hero" column = "Main_hero" type = "string"/>
        <property name = "Side_hero" column = "Side_hero" type = "string"/>
        <property name = "Satire" column = "Satire" type = "string"/>
        <property name = "Place" column = "Place" type = "string"/>


    </class>
</hibernate-mapping>